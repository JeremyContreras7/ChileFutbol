<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondou"
    tools:context=".UdechileActivity">

    <Button
        android:id="@+id/btndatosU"
        android:layout_width="130dp"
        android:layout_height="75dp"
        android:layout_marginStart="150dp"
        android:layout_marginTop="98dp"
        android:layout_marginEnd="131dp"
        android:backgroundTint="#3949AB"
        android:text="Datos"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnEquipou"
        android:layout_width="130dp"
        android:layout_height="75dp"
        android:layout_marginStart="150dp"
        android:layout_marginTop="136dp"
        android:layout_marginEnd="131dp"
        android:backgroundTint="#F10404"
        android:text="Equipo"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btndatosU" />

    <Button
        android:id="@+id/btnVolver"
        android:layout_width="130dp"
        android:layout_height="75dp"
        android:layout_marginStart="150dp"
        android:layout_marginTop="129dp"
        android:layout_marginEnd="131dp"
        android:background="@android:drawable/ic_media_rew"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnEquipou" />
</androidx.constraintlayout.widget.ConstraintLayout>